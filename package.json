{
  "name": "@gecut/monorepo",
  "description": "The Gecut Library",
  "repository": "https://github.com/Gecut/Gecut/",
  "author": "S. MohammadMahdi Zamanian <mm25zamanian@gmail.com> (https://mm25zamanian.ir)",
  "license": "MIT",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "workspaces": [
    "ui/*",
    "services/*",
    "uniquely/ui/*"
    "server/*"
  ],
  "scripts": {
    "l": "yarn lint",
    "b": "yarn build",
    "br": "run-s build:ts build:r",
    "c": "yarn clean",
    "cb": "run-s clean build",
    "s": "run-s build serve",
    "w": "yarn watch",
    "f": "yarn format",
    "fl": "yarn format:eslint",
    "fp": "yarn format:prettier",
    "pm": "run-s pull clean build:ts build:r ver-minor push",
    "pp": "run-s pull clean build:ts build:r ver-patch push",
    "lint": "run-s lint:*",
    "lint:ts": "eslint . --config .eslintrc.yml --ext .ts --ignore-path .gitignore",
    "build": "yarn build:ts",
    "build:ts": "tsc --build",
    "build:r": "lerna run build",
    "format": "run-s format:prettier format:eslint",
    "format:eslint": "yarn lint:ts --fix",
    "format:prettier": "prettier . --ignore-path .gitignore --write",
    "clean": "yarn build:ts --clean && lerna run clean",
    "serve": "wds",
    "watch": "run-p watch:* serve",
    "watch:ts": "yarn build:ts --watch --preserveWatchOutput",
    "ver-minor": "lerna version minor --no-push",
    "ver-patch": "lerna version patch --no-push",
    "pull": "git pull",
    "push": "git push && git push --tags",
    "publish": "lerna publish from-package"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@typescript/lib-dom": "npm:@types/web",
    "@web/dev-server": "^0.1.35",
    "@web/dev-server-esbuild": "^0.3.3",
    "eslint": "^8.33.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-lit": "^1.8.2",
    "eslint-plugin-lit-a11y": "^2.3.0",
    "eslint-plugin-wc": "^1.4.0",
    "lerna": "^6.4.1",
    "lit-analyzer": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.9.5",
    "typescript-lit-html-plugin": "^0.9.0"
  },
  "resolutions": {
    "esbuild": "^0.16.4"
  }
}
